<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_up_height"
        android:layout_marginBottom="@dimen/panel_up_margin_top"
        android:padding="@dimen/padding"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back__2_">
        </ImageView>

        <TextView
            android:layout_width="@dimen/width_text"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/up"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/text_size_up"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search">
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_below="@id/top_menu"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginBottom="@dimen/panel_up_margin_top"
        android:background="@drawable/shape_cruglie_ygli_card"
        android:orientation="vertical"
        android:paddingLeft="@dimen/panel_up_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height">

            <ImageView
                android:layout_width="@dimen/pic"
                android:layout_height="@dimen/pic"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_marginRight="@dimen/panel_up_margin_top"
                android:src="@drawable/user"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_text"
                    android:layout_marginTop="@dimen/margin_2"
                    android:text="@string/user"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/size_2"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_3"
                    android:gravity="center"
                    android:text="@string/online"
                    android:textSize="@dimen/size_3"></TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginRight="@dimen/panel_up_margin_top"
            android:lineHeight="@dimen/line_height"
            android:text="@string/description"
            android:textColor="@color/light_black"
            android:textSize="@dimen/size_2"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:text="@string/reader"
                android:textAllCaps="true"
                android:textColor="@color/reader"
                android:textSize="@dimen/text_siz_1"></TextView>

            <ImageView
                android:layout_width="@dimen/height_3"
                android:layout_height="@dimen/height_3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_like_top"
                android:layout_marginRight="@dimen/padding"
                android:src="@drawable/ic_thumb_up_outline"></ImageView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5"
        android:layout_below="@id/card_1"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginBottom="@dimen/panel_up_margin_top"
        android:background="@color/gray"
        android:orientation="vertical"
        android:paddingLeft="@dimen/panel_up_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height">

            <ImageView
                android:layout_width="@dimen/pic"
                android:layout_height="@dimen/pic"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_marginRight="@dimen/panel_up_margin_top"
                android:src="@drawable/tina">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_text"
                    android:layout_marginTop="@dimen/margin_2"
                    android:text="@string/tina"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/size_2">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_3"
                    android:gravity="center"
                    android:text="@string/online_tina"
                    android:textSize="@dimen/size_3">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginRight="@dimen/panel_up_margin_top"
            android:lineHeight="@dimen/line_height"
            android:text="@string/descr_tina"
            android:textColor="@color/light_black"
            android:textSize="@dimen/size_2">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:text="@string/reader"
                android:textAllCaps="true"
                android:textColor="@color/reader"
                android:textSize="@dimen/text_siz_1">

            </TextView>

            <ImageView
                android:layout_width="@dimen/height_3"
                android:layout_height="@dimen/height_3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_like_top"
                android:layout_marginRight="@dimen/padding"
                android:src="@drawable/ic_thumb_up_outline"></ImageView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5"
        android:layout_below="@id/card_2"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginBottom="@dimen/panel_up_margin_top"
        android:background="@color/gray"
        android:orientation="vertical"
        android:paddingLeft="@dimen/panel_up_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height">

            <ImageView
                android:layout_width="@dimen/pic"
                android:layout_height="@dimen/pic"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_marginRight="@dimen/panel_up_margin_top"
                android:src="@drawable/tomek">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_text"
                    android:layout_marginTop="@dimen/margin_2"
                    android:text="@string/online_tomek"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/size_2">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_3"
                    android:gravity="center"
                    android:text="@string/online"
                    android:textSize="@dimen/size_3">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginRight="@dimen/panel_up_margin_top"
            android:lineHeight="@dimen/line_height"
            android:text="@string/descr_tina"
            android:textColor="@color/light_black"
            android:textSize="@dimen/size_2">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:text="@string/reader"
                android:textAllCaps="true"
                android:textColor="@color/reader"
                android:textSize="@dimen/text_siz_1">

            </TextView>

            <ImageView
                android:layout_width="@dimen/height_3"
                android:layout_height="@dimen/height_3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_like_top"
                android:layout_marginRight="@dimen/padding"
                android:src="@drawable/ic_thumb_up_outline"></ImageView>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height_4"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_7"
                android:src="@drawable/ic_shopping">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height_4"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_7"
                android:src="@drawable/ic_book_open">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height_4"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_7"
                android:src="@drawable/ic_cart">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height_4"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_7"
                android:src="@drawable/ic_tag_heart">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5"
                android:src="@drawable/ic_heart">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/account"
                android:textColor="@color/blue"
                android:textSize="@dimen/size_3">

            </TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>