<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/panel_up_margin_top"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:paddingLeft="@dimen/panel_up_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_cruglie_ygli_card">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="@dimen/margin_3"
            app:layout_constraintRight_toRightOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:layout_marginLeft="@dimen/panel_up_margin_top"
            android:layout_marginTop="@dimen/margin_4"
            android:text=""
            android:textColor="@color/light_black"
            android:textSize="@dimen/size_2"
            app:layout_constraintLeft_toRightOf="@+id/photo"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_3"
            android:textSize="@dimen/text_size_2"
            android:text=""
            android:layout_marginLeft="@dimen/panel_up_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/photo">

        </TextView>
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/panel_up_margin_top"
            android:text=""
            android:lineHeight="@dimen/line_height"
            android:textSize="@dimen/size_2">

        </TextView>

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_siz_1"
            app:layout_constraintTop_toBottomOf="@+id/info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_2"
            android:textAllCaps="true"
            android:textColor="@color/reader">

        </TextView>

        <Button
            android:id="@+id/like"
            android:layout_width="@dimen/height_3"
            android:layout_height="@dimen/height_3"
            app:layout_constraintTop_toBottomOf="@+id/info"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ic_like"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_3">

        </Button>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>